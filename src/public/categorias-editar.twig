{% extends "layout/default.twig" %}

{% block content %}
    <div class="container">
        <div class="row">
            <form action="/categorias/salvar" method="POST">
                {% if categorias.id != '' %}
                    <legend>Formulário para Alteração de Categoria</legend>
                        
                    <input type="hidden" name="id" value="{{ categorias.id }}">

                    <div class="form-group">
                        <label>Nome da Categoria</label>
                        <input type="text" name="nome" placeholder="Nome da Categoria" value="{{ categorias.nome }}" class="form-control">
                    </div>

                    <button type="submit" class="btn btn-primary">
                        Salvar
                    </button>
                {% else %}
                    <h3>Selecione uma categoria para  excluir</h3>
                {% endif %}
            </form>
        </div>
    </div>
{% endblock %}